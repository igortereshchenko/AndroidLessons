<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:text="Открыть LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnLinearLayout"/>

        <Button
            android:text="Открыть RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnRelativeLayout"/>

        <Button
            android:text="Открыть TableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnTableLayout"/>

        <Button
            android:text="Открыть FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnFrameLayout"/>

        <Button
            android:text="Открыть GridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnGridLayout"/>

        <Button
            android:text="Открыть ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnScrollView"/>

        <Button
            android:text="Открыть ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnConstraintLayout"/>


        <Button
            android:text="Динамическая загрузка шаблона"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnActivityLayoutLoading"/>


    </LinearLayout>

</ScrollView>