        <Button
            android:text="Открыть"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnLinearLayout"/>

        <!-- Lesson2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
