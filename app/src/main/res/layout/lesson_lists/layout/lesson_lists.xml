<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Button
            android:text="Открыть ArrayAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnArrayAdapter"/>

        <Button
            android:text="Открыть Custom ArrayAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnCustomArrayAdapter"/>

        <Button
            android:text="Открыть Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnSpinner"/>


        <Button
            android:text="Открыть AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnAutoCompleteTextView"/>


        <Button
            android:text="Открыть Grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnGrid"/>

    </LinearLayout>

</ScrollView>